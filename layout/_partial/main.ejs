<div class="trm-content-start <% if(!is_home()) { %>h-entry<% } %>">
    <!-- banner -->
    <%- banner %>
    <!-- banner end -->
    <div class="container">
        <div class="row">
            <% if(!page.single_column) { %>
                <div class="trm-page-sidebar col-lg-4 hidden-sm">
                    <!-- main card -->
                    <%- partial(theme.layout.sidebar) %>
                    <!-- main card end -->
                </div>
            <% } %>
            <div class="trm-page-content <%- !page.single_column ? 'col-lg-8':'col-lg-12' %>">
                <div id="trm-content" class="trm-content">
                    <%- content %>

                    <div class="trm-divider footer-divider"></div>

                    <!-- footer -->
                    <%- partial(theme.layout.footer) %>
                    <!-- footer end -->

                </div>
            </div>
        </div>
    </div>
</div>