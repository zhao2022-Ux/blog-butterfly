nav#nav
  span#blog-info
    a(href=url_for('/') title=config.title)
      case theme.nav.display
        when 'logo'
          img.site-icon(src=url_for(theme.nav.logo))
        when 'title'
          span.site-name=config.title
        when 'logotitle'
          img.site-icon(src=url_for(theme.nav.logo))
          span.site-name=config.title
        when 'html'
          img.site-icon(src=url_for(theme.nav.logo))
          span.site-name=config.title
        when 'image'
          img.site-logo(src=url_for(theme.nav.logo))
        default
          span.site-name=config.title

  #menus
    !=partial('includes/header/menu_item', {}, {cache: true})
    center(id="name-container")
      a(id="page-name" href="javascript:rmf.scrollToTop()") PAGE_NAME
  #nav-right
    if theme.nav.travellings
      #travellings
        a.site-page(href=url_for('https://www.travellings.cn/go.html') title="随机前往一个开往项目网站")
          i.fas.fa-train.fa-fw
    if theme.nav.random
      #random
        a.site-page(href=url_for('javascript:toRandomPost()') title="随机前往一个文章")
          i.fas.fa-paper-plane.fa-fw
    if (theme.algolia_search.enable || theme.local_search.enable || theme.docsearch.enable)
      #search-button
        a.site-page.social-icon.search(href="javascript:void(0);")
          i.fas.fa-search.fa-fw
    #toggle-menu
      a.site-page(href="javascript:void(0);")
        i.fas.fa-bars.fa-fw
