- let defaultComment = theme.comments.use[0]
hr
#post-comment
  .comment-head
    .comment-headline
      i.fas.fa-comments.fa-fw
      span= ' ' + _p('comment')
    
    if theme.comments.use.length > 1
      #comment-switch
        span.first-comment=defaultComment
        span.switch-btn
        span.second-comment=theme.comments.use[1]


  .comment-wrap
    each name in theme.comments.use
      div
        case name
          when 'Disqus'
            #disqus_thread
          when 'Valine'
            #vcomment.vcomment
          when 'Disqusjs'
            #disqusjs
          when 'Idisqus'
            input#comment-toggle(type="checkbox" disabled)
            span= ' ' + _p('disquscheck')
            #idisqus-container
            footer.idsqs-footer-container
              p.idsqs-footer
                | Powered by&nbsp;
                a.idsqs-disqus-logo(href="https://disqus.com" rel="external nofollow noopener noreferrer" target="_blank")
                | &nbsp;&amp;&nbsp;
                a.idsqs-idisqus-logo(href="https://github.com/fooleap/disqus-php-api" rel="noreferrer" target="_blank") iDisqus
          when 'Livere'
            #lv-container(data-id="city" data-uid=theme.livere.uid)
          when 'Gitalk'
            #gitalk-container
          when 'Utterances'
            #utterances-wrap
          when 'Twikoo'
            #twikoo-wrap
          when 'Waline'
            #waline-wrap
          when 'Giscus'
            #giscus-wrap
          when 'Facebook Comments'
            .fb-comments(data-colorscheme = theme.display_mode === 'dark' ? 'dark' : 'light'
                        data-numposts= theme.facebook_comments.pageSize || 10
                        data-order-by= theme.facebook_comments.order_by || 'social'
                        data-width="100%")
          when 'Remark42'
            #remark42
