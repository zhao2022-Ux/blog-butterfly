.tiy-container {
  position: relative;
  overflow: hidden;
  display: inline-block;
  border: 1px solid #eee;
  margin: 1rem 0;
  width: 100%;
  height: 500px;
}

.tiy-container iframe {
  position: relative;
  top: 0;
  display: inline-block;
  background-color: white;
}

@media screen and (max-width: 500px) {
  .tiy-container {
      height: 700px;
      width: 100%;
  }
}